public class Main{
public static int count(String str, char a ) {
if (str.length<1) 
return 0;
else if (str.charAt(0,str.lenght()-1)==a) 
return 1+count(str.substring(0,str.length()-1),a);
else return 0+count(str.substring(0,str.length()-1,a); 

}
public static void main (String[]args){
System.out.println(count("software developer",'e'));

//kendisine parametre olarak gelen karakterin bir stringte kaç kez tekrar ettiğini bulan program örneği
}
}
