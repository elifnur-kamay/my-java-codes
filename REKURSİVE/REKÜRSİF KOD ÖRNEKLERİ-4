public class Main{
public static harfBul( char[] dizi, char a,int i){
if (i<1)
return 0;
else if (dizi[i]==a)
return 1+ harfBul(dizi,a-1);
else
return 0+ harfBul(dizi,a-1);
}
public static void main (String []args){
char[] d={'a','e','p','b','e','v','k','e','o','e','n'};
System.out.println(harfBul(d,'e',d.length-1));
}
}
// girilen dizide rekürsif olarak girilen karakterin kaç kez tekrar ettiğini bulan program örneği
